
<% if @products.any? %>
  <%= will_paginate %>
  <div class="card-deck">
    <% @products.each do |product| %>
      <div class="card">
        <div class="card-header">
          <%= product.title %>
        </div>
        <div class="card-body">
          <h1 class="card-title"><%= product.price %></h1>
          <%= image_tag product.image.url %>
          <%= link_to "詳細画面", product_path(product) %>
        </div>
      </div>
    <% end %>
  </div>
  <%= will_paginate %>
<% else %>
  <h1 style="margin-top: 300px; text-align: center">出品物がありません。出品してください</h1>
<% end %>



